{
  "manifest_version": 2,

  "name": "Go Outside",
  "description": "No, really. Go outside.",
  "version": "0.0.1",

  "chrome_url_overrides": {
      "newtab": "newtab.html"
    },

  "browser_action": {
    "default_icon": "images/logo.png",
    "default_title": "Go Outside"
  },
  "permissions": [    
    "alarms",
    "tabs",
    "activeTab",
    "identity",
    "identity.email",
    "bookmarks",
    "*://*/*",
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "storage",
    "idle",    
    "geolocation"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_page": "background.html",
  "content_security_policy": "script-src 'self' https://www.gstatic.com https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'",
  "commands": {
    "open-google": {
      "description": "Open a tab to google.com",
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    },
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      }
    }
  }
}
